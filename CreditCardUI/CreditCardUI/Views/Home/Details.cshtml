@{
    @model ReadCreditCardInformation
}


<h1>Detalles de la tarjeta de crédito</h1>

<div class="credit-card-container">
    <h3>Información de la tarjeta</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreditCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditCardNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CVV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CVV)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
    </dl>

</div>

<div>
    <hr />
    <dl class="row">
    </dl>
</div>

<div>
    <div>
        <h3 class="transaction">Transacciones</h3>
        <button class="btnCreateTransaction" onclick="window.location.href='@Url.Action("Details", "Transaction", new { Id = Model.Id, FromDate = DateTime.Now })'">Detalle de transacciones</button>
    </div>
    <hr />
    <button class="btnCreateTransaction" onclick="window.location.href='@Url.Action("Index", "Transaction", new { Id = Model.Id })'">Crear Transacción</button>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Monto
                </th>
                <th>
                    Fecha
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => transaction.Concept)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => transaction.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => transaction.TransactionDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: auto;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1, h3 {
        color: #333;
    }
    .transaction-table{
        display: inline-block
    }
    .credit-card-container {
        border-bottom: 1px solid #ddd;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
    }

    dt.col-sm-2, dd.col-sm-10 {
        width: 50%;
        margin: 0;
        padding: 10px;
        box-sizing: border-box;
    }

    dt.col-sm-2 {
        font-weight: bold;
    }

    dd.col-sm-10 {
        font-style: italic;
    }

    .transaction-table {
        width: 100%;
        border-collapse: collapse;
    }

        .transaction-table th, .transaction-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .transaction-table th {
            background-color: #f5f5f5;
            font-weight: bold;
            color: #333;
        }

        .transaction-table td {
            color: #555;
        }

    .btnCreateTransaction {
        background-color: #4CAF50;
        color: white;
        padding: 15px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        .btnCreateTransaction[type="submit"]:hover {
            background-color: #45a049;
        }
</style>