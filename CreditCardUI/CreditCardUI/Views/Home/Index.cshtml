@{
    ViewData["Title"] = "Home Page";
    @model IEnumerable<ReadCreditCard>
}

<div class="credit-cards-container">
    @foreach(var item in Model)
    {
        <div class="credit-card" onclick="window.location.href='@Url.Action("Details", "Home", new { Id = item.Id })'">
            <div class="card-number">@item.CreditCardNumber</div>
            <div class="card-holder">@item.ClientName</div>
            <div class="card-expiration-container">
                <div class="card-holder">Mes/Año</div>
                <div class="expiration-date">@item.ExpirationDate.ToString("MM/yy")</div>
            </div>
        </div>
    }
   
</div>
<style>
    .credit-cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }

    .credit-card {
        width: 300px;
        background-color: #f5f5f5;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .credit-card:hover{
            transform: scale(1.025, 1.025);
    }
    .card-expiration-container{
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: center
    }
    .card-number {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .expiration-date, .card-holder {
        font-size: 16px;
        color: #555;
        margin-bottom: 5px;
    }

    .card-holder {
        font-weight: bold;
    }
</style>

